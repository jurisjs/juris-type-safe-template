{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@types": ["./types/index.d.ts"],
            "@types/*": ["./types/*"],
            "@app-states": ["types/app.states.d.ts"],
            "@app-comp": ["types/app.components.d.ts"]
        }
    },
    "include": ["**/*.js", "**/*.ts", "**/*.d.ts", "types/**/*"],
    "exclude": ["node_modules"]
}
